<h1 class="text-center mb-5">All Alpha Bloggers</h1>

<%= will_paginate class: 'd-flex justify-content-center' %>

<% @users.each do |user| %>
  <div class="row justify-content-center">
    <div class="col-4">
      <div class="card bg-light mb-3 text-center">
        <div class="mt-3"><%= link_to gravatar_for(user), user_path(user) %></div>
        <div class="card-body">
          <h4><%= link_to user.username, user_path(user) %></h4>
          <small class="text-muted">
            <%= pluralize(user.articles.count, 'article') if user.articles %>
          </small>
        </div>
        <% if logged_in? && current_user.admin? %>
          <div class="card-footer">
            <%= button_to 'Delete this user', user_path(user),
                          method: :delete,
                          data: { confirm: 'Are you sure you want to delete the user and their articles?' },
                          form_class: 'd-inline-block',
                          class: 'btn btn-sm btn-danger' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
<%= will_paginate class: 'd-flex justify-content-center' %>
