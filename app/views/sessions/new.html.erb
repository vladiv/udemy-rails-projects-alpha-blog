<h1 class="text-center mt-5">Log in</h1>

<%= form_for(:session, :html => {class: 'some-class', role: 'form'}, url: login_path) do |f| %>
  <div class="form-group row">
    <div class="col-sm-2 text-right">
      <%= f.label :email, class: 'col-form-label', for: 'inputUserEmail' %>
    </div>
    <div class="col-sm-8">
      <%= f.email_field :email, class: 'form-control', id: 'inputUserEmail', placeholder: 'Enter email' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 text-right">
      <%= f.label :paswword, class: 'col-form-label', for: 'inputUserPassword' %>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, class: 'form-control', id: 'inputUserPassword', autocomplete: 'off' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 ml-auto">
      <%= f.submit 'Log in', class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>

<div class="text-center">
  [ <%= link_to 'Cancel request and return to articles listing', articles_path %> ]
</div>
