<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for(@article, :html => {class: 'some-class', role: 'form'}) do |f| %>
  <div class="form-group row">
    <%= f.label :title, class: 'col-sm-2 col-form-label', for: 'inputArticleTitle' %>
    <div class="col-sm-8">
      <%= f.text_field :title, class: 'form-control', id: 'inputArticleTitle', placeholder: 'Title for article', autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :description, class: 'col-sm-2 col-form-label', for: 'inputArticleBody' %>
    <div class="col-sm-8">
      <%= f.text_area :description, class: 'form-control', id: 'inputArticleBody', placeholder: 'Body of article', rows: 10 %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 ml-auto">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>

<div class="text-center">
  [ <%= link_to 'Cancel request and return to articles listing', articles_path %> ]
</div>





