<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: 'some-class', role: 'form'}) do |f| %>
  <div class="form-group row">
    <div class="col-sm-2 text-right">
      <%= f.label :name, class: 'col-form-label', for: 'inputCategoryName' %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :name, class: 'form-control', id: 'inputCategoryName', placeholder: 'Category username', autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 ml-auto">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>

<div class="text-center">
  [ <%= link_to 'Cancel request and return to articles listing', articles_path %> ]
</div>
